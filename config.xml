<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.apcordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AppCordova</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <platform name="android">
    <splash src="res/mipmap-hdpi/ic_launcher.png" density="hdpi" />
    <splash src="res/mipmap-mdpi/ic_launcher.png" density="mdpi" />
    <splash src="res/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
    <splash src="res/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
    <splash src="res/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
</platform>
<platform name="browser">
    <splash src="res/logetow.png" />
</platform>
<preference name="SplashScreenDelay" value="1000" />
</widget>
